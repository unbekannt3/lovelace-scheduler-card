{
	"name": "lovelace-scheduler-card",
	"version": "0.1.0",
	"description": "Lovelace Scheduler Card - Display and edit Home Assistant schedule entities",
	"main": "src",
	"scripts": {
		"build": "webpack --mode production --output-filename dayscheduler-card.js",
		"build:dev": "webpack --mode development --output-filename dayscheduler-card.js",
		"watch": "webpack serve",
		"typecheck": "tsc --noEmit",
