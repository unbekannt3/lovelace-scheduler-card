		"babel-plugin-template-html-minifier": "^4.1.0",
		"prettier": "^3.8.1",
		"terser-webpack-plugin": "^5.3.16",
		"ts-loader": "^9.5.0",
		"typescript": "^5.8.0",
		"webpack": "^5.105.2",
		"webpack-cli": "^6.0.1",
		"webpack-dev-server": "^5.2.3"
	},
	"dependencies": {
		"lit": "^3.3.2"
	}
